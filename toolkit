    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // --- UI INTERACTIONS ---
            const tabs = document.querySelectorAll('.tab-button');
            const contents = document.querySelectorAll('.tab-content');
            const themeToggleBtn = document.getElementById('theme-toggle');
            const htmlEl = document.documentElement;

            // Tab Logic
            tabs.forEach(tab => {
                tab.addEventListener('click', () => {
                    const target = tab.dataset.tab;
                    
                    // Reset Styles
                    tabs.forEach(t => {
                        t.classList.remove('bg-primary-50', 'text-primary-600', 'dark:bg-slate-700/50', 'dark:text-white');
                        t.classList.add('text-slate-600', 'dark:text-slate-400');
                    });

                    // Active Style
                    tab.classList.remove('text-slate-600', 'dark:text-slate-400');
                    tab.classList.add('bg-primary-50', 'text-primary-600', 'dark:bg-slate-700/50', 'dark:text-white');

                    // Show Content
                    contents.forEach(c => {
                        c.classList.remove('active');
                        if(c.id === `${target}-tool`) c.classList.add('active');
                    });
                });
            });

            // Dark Mode
            const savedTheme = localStorage.getItem('theme');
            const systemPrefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
            if (savedTheme === 'dark' || (!savedTheme && systemPrefersDark)) htmlEl.classList.add('dark');

            themeToggleBtn.addEventListener('click', () => {
                htmlEl.classList.toggle('dark');
                localStorage.setItem('theme', htmlEl.classList.contains('dark') ? 'dark' : 'light');
            });

            // --- 1. METADATA REMOVER ---
            const imageUpload = document.getElementById('image-upload');
            const metadataResult = document.getElementById('metadata-result');
            const fileNameSpan = document.getElementById('file-name');

            imageUpload.addEventListener('change', (e) => {
                const file = e.target.files[0];
                if(!file) return;
                fileNameSpan.textContent = file.name;
                metadataResult.innerHTML = `<div class="flex justify-center py-8"><div class="animate-spin rounded-full h-8 w-8 border-2 border-primary-600 border-t-transparent"></div></div>`;

                const reader = new FileReader();
                reader.onload = (ev) => {
                    const img = new Image();
                    img.onload = () => {
                        const canvas = document.createElement('canvas');
                        canvas.width = img.width; canvas.height = img.height;
                        canvas.getContext('2d').drawImage(img, 0, 0);
                        
                        canvas.toBlob((blob) => {
                            const cleanedUrl = URL.createObjectURL(blob);
                            EXIF.getData(file, function() {
                                const tags = EXIF.getAllTags(this);
                                const hasData = Object.keys(tags).length > 0;
                                
                                let tagsHtml = '';
                                if (hasData) {
                                    tagsHtml = `<div class="mb-4 text-left bg-white dark:bg-slate-900 p-4 rounded-lg shadow-inner max-h-48 overflow-y-auto text-xs">
                                        <table class="w-full">
                                            <thead class="text-slate-400 border-b border-slate-200 dark:border-slate-700"><tr><th class="pb-2">Tag</th><th class="pb-2">Value</th></tr></thead>
                                            <tbody class="text-slate-600 dark:text-slate-300 font-mono">
                                                ${Object.entries(tags).map(([k,v]) => `<tr><td class="py-1 pr-2 font-semibold">${k}</td><td class="py-1 break-all">${String(v).substring(0,50)}</td></tr>`).join('')}
                                            </tbody>
                                        </table>
                                    </div>`;
                                }

                                let statusHtml = hasData 
                                    ? `<div class="bg-amber-50 dark:bg-amber-900/20 text-amber-700 dark:text-amber-400 p-4 rounded-xl mb-4 flex flex-col gap-2">
                                        <div class="flex items-center gap-2 font-bold"><svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/></svg> Found & Removed ${Object.keys(tags).length} hidden data tags:</div>
                                        ${tagsHtml}
                                       </div>`
                                    : `<div class="bg-green-50 dark:bg-green-900/20 text-green-700 dark:text-green-400 p-4 rounded-xl mb-4 flex items-center gap-3">
                                        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                                        <span>Image appears clean. We scrubbed it anyway to be safe.</span>
                                       </div>`;

                                metadataResult.innerHTML = `
                                    ${statusHtml}
                                    <div class="flex flex-col md:flex-row gap-6">
                                        <div class="flex-1">
                                            <img src="${cleanedUrl}" class="rounded-lg shadow-lg w-full h-64 object-contain bg-slate-100 dark:bg-slate-900">
                                        </div>
                                        <div class="flex-1 flex items-center">
                                            <a href="${cleanedUrl}" download="cleaned_${file.name}" class="w-full py-4 bg-primary-600 hover:bg-primary-700 text-white font-bold rounded-xl text-center shadow-lg shadow-primary-500/30 transition-transform hover:scale-105">
                                                Download Safe Image
                                            </a>
                                        </div>
                                    </div>
                                `;
                            });
                        }, file.type);
                    };
                    img.src = ev.target.result;
                };
                reader.readAsDataURL(file);
            });

            // --- 2. PASSWORD GENERATOR ---
            const genBtn = document.getElementById('generate-btn');
            const copyBtn = document.getElementById('copy-password');
            const genInput = document.getElementById('generated-password');
            const lenSlider = document.getElementById('pass-length-slider');
            const lenVal = document.getElementById('pass-length-val');
            const useSymbols = document.getElementById('use-symbols');
            const useNumbers = document.getElementById('use-numbers');
            
            const generatePass = () => {
                const len = parseInt(lenSlider.value);
                lenVal.textContent = len;
                let chars = "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ";
                if(useNumbers.checked) chars += "0123456789";
                if(useSymbols.checked) chars += "!@#$%^&*()_+-=[]{}|;:,.<>?";
                
                const arr = new Uint32Array(len);
                window.crypto.getRandomValues(arr);
                let pass = "";
                for(let i=0; i<len; i++) pass += chars[arr[i] % chars.length];
                genInput.value = pass;
            };

            lenSlider.addEventListener('input', generatePass);
            useSymbols.addEventListener('change', generatePass);
            useNumbers.addEventListener('change', generatePass);
            genBtn.addEventListener('click', generatePass);
            copyBtn.addEventListener('click', () => {
                navigator.clipboard.writeText(genInput.value);
                copyBtn.innerHTML = `<svg class="h-6 w-6 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>`;
                setTimeout(() => copyBtn.innerHTML = `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3"/></svg>`, 2000);
            });
            generatePass();

            // --- PASSWORD VAULT (NEW) ---
            const vaultList = document.getElementById('vault-list');
            const saveVaultBtn = document.getElementById('vault-save-btn');

            function renderVault() {
                const vault = JSON.parse(localStorage.getItem('secutools_vault') || '[]');
                if (vault.length === 0) {
                    vaultList.innerHTML = '<div class="text-slate-400 text-sm text-center italic py-4">No passwords saved yet.</div>';
                    return;
                }
                vaultList.innerHTML = vault.map((item, idx) => `
                    <div class="flex justify-between items-center p-3 bg-slate-50 dark:bg-slate-900 rounded-lg border border-slate-200 dark:border-slate-700 hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors">
                        <div class="flex flex-col min-w-0 pr-2">
                            <div class="font-bold text-slate-700 dark:text-slate-200 truncate text-sm">${item.site}</div>
                            <div class="text-slate-500 text-xs truncate">${item.user}</div>
                        </div>
                        <div class="flex items-center gap-2 flex-shrink-0">
                            <button onclick="copyVaultPass('${item.pass}')" class="p-1.5 text-primary-600 hover:bg-primary-50 rounded-md transition-colors" title="Copy Password">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 01-2-2v8a2 2 0 01-2 2h-8a2 2 0 01-2-2v-8a2 2 0 012-2z" /></svg>
                            </button>
                            <button onclick="deleteVaultItem(${idx})" class="p-1.5 text-red-500 hover:bg-red-50 rounded-md transition-colors" title="Delete">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" /></svg>
                            </button>
                        </div>
                    </div>
                `).join('');
            }

            saveVaultBtn.addEventListener('click', () => {
                const site = document.getElementById('vault-site').value.trim();
                const user = document.getElementById('vault-user').value.trim();
                const pass = document.getElementById('vault-pass').value.trim();
                
                if(!site || !user || !pass) return; // basic validation
                
                const vault = JSON.parse(localStorage.getItem('secutools_vault') || '[]');
                vault.push({ site, user, pass });
                localStorage.setItem('secutools_vault', JSON.stringify(vault));
                
                // Clear inputs
                document.getElementById('vault-site').value = '';
                document.getElementById('vault-user').value = '';
                document.getElementById('vault-pass').value = '';
                
                renderVault();
            });

            window.deleteVaultItem = (idx) => {
                const vault = JSON.parse(localStorage.getItem('secutools_vault') || '[]');
                vault.splice(idx, 1);
                localStorage.setItem('secutools_vault', JSON.stringify(vault));
                renderVault();
            };

            window.copyVaultPass = (pass) => {
                navigator.clipboard.writeText(pass);
                // Optional: toast feedback could go here
            }

            // Initialize Vault
            renderVault();

            // --- PASSWORD CHECKER ---
            document.getElementById('check-password-btn').addEventListener('click', async () => {
                const pw = document.getElementById('password-input').value;
                const res = document.getElementById('password-result');
                if(!pw) return;
                
                res.innerHTML = `<div class="flex items-center gap-2 text-slate-500"><div class="animate-spin rounded-full h-4 w-4 border-2 border-slate-500 border-t-transparent"></div> Checking database...</div>`;
                
                let score = 0;
                if(pw.length > 12) score++;
                if(/[A-Z]/.test(pw)) score++;
                if(/[0-9]/.test(pw)) score++;
                if(/[^A-Za-z0-9]/.test(pw)) score++;
                
                const encoder = new TextEncoder();
                const data = encoder.encode(pw);
                const buf = await crypto.subtle.digest('SHA-1', data);
                const hashArr = Array.from(new Uint8Array(buf));
                const hashHex = hashArr.map(b => b.toString(16).padStart(2,'0')).join('').toUpperCase();
                const prefix = hashHex.substring(0,5);
                const suffix = hashHex.substring(5);
                
                try {
                    const apiRes = await fetch(`https://api.pwnedpasswords.com/range/${prefix}`);
                    const text = await apiRes.text();
                    const match = text.split('\r\n').find(line => line.startsWith(suffix));
                    const count = match ? parseInt(match.split(':')[1]) : 0;
                    
                    const color = count > 0 ? 'bg-red-50 text-red-700 border-red-200 dark:bg-red-900/20 dark:text-red-400' : 'bg-green-50 text-green-700 border-green-200 dark:bg-green-900/20 dark:text-green-400';
                    const icon = count > 0 ? '' : '';
                    const title = count > 0 ? 'Breached Password' : 'Safe Password';
                    const desc = count > 0 ? `This password appears in <b>${count.toLocaleString()}</b> known data leaks. Change it immediately.` : `Good news! This password was not found in any known public breaches.`;

                    res.innerHTML = `
                        <div class="mt-4 p-4 rounded-xl border ${color}">
                            <div class="flex items-center gap-2 font-bold text-lg mb-1"><span>${icon}</span> ${title}</div>
                            <p class="text-sm opacity-90">${desc}</p>
                            <div class="mt-3 text-xs font-semibold uppercase tracking-wider opacity-70">Strength Score: ${score}/4</div>
                            <div class="w-full bg-black/10 h-1.5 rounded-full mt-1"><div class="h-full rounded-full bg-current" style="width: ${(score/4)*100}%"></div></div>
                        </div>
                    `;
                } catch(e) {
                    res.innerHTML = `<div class="text-red-500 text-sm mt-2">Error checking database. Check internet connection.</div>`;
                }
            });

            document.getElementById('toggle-password').addEventListener('click', function() {
                const input = document.getElementById('password-input');
                const isOpen = input.type === 'text';
                input.type = isOpen ? 'password' : 'text';
                this.querySelector('#eye-open').classList.toggle('hidden', isOpen);
                this.querySelector('#eye-closed').classList.toggle('hidden', !isOpen);
            });

            // --- 3. ENCRYPTION (Fixed Buffer Handling) ---
            const getCryptoKey = async (pw, salt, usage) => {
                const enc = new TextEncoder();
                const keyMat = await window.crypto.subtle.importKey("raw", enc.encode(pw), {name: "PBKDF2"}, false, ["deriveKey"]);
                return window.crypto.subtle.deriveKey({name: "PBKDF2", salt, iterations: 100000, hash: "SHA-256"}, keyMat, {name: "AES-GCM", length: 256}, false, usage);
            };
            
            const buf2Base64 = buf => {
                let binary = '';
                const bytes = new Uint8Array(buf);
                const len = bytes.byteLength;
                for (let i = 0; i < len; i++) {
                    binary += String.fromCharCode(bytes[i]);
                }
                return window.btoa(binary);
            }
            const base642Buf = str => Uint8Array.from(atob(str), c => c.charCodeAt(0));

            document.getElementById('btn-encrypt').addEventListener('click', async () => {
                const pw = document.getElementById('crypto-key').value;
                const txt = document.getElementById('crypto-input').value;
                if(!pw || !txt) return alert('Please enter key and text');
                
                try {
                    const salt = window.crypto.getRandomValues(new Uint8Array(16));
                    const iv = window.crypto.getRandomValues(new Uint8Array(12));
                    const key = await getCryptoKey(pw, salt, ['encrypt']);
                    const enc = new TextEncoder();
                    const encrypted = await window.crypto.subtle.encrypt({name: "AES-GCM", iv}, key, enc.encode(txt));
                    
                    document.getElementById('crypto-output').value = `${buf2Base64(salt)}:${buf2Base64(iv)}:${buf2Base64(encrypted)}`;
                } catch(e) {
                    alert("Encryption failed. Check inputs.");
                    console.error(e);
                }
            });

            document.getElementById('btn-decrypt').addEventListener('click', async () => {
                const pw = document.getElementById('crypto-key').value;
                const txt = document.getElementById('crypto-input').value;
                if(!pw || !txt) return alert('Please enter key and encrypted text');
                
                try {
                    const parts = txt.split(':');
                    const salt = base642Buf(parts[0]);
                    const iv = base642Buf(parts[1]);
                    const data = base642Buf(parts[2]);
                    const key = await getCryptoKey(pw, salt, ['decrypt']);
                    const dec = await window.crypto.subtle.decrypt({name: "AES-GCM", iv}, key, data);
                    document.getElementById('crypto-output').value = new TextDecoder().decode(dec);
                } catch(e) {
                    document.getElementById('crypto-output').value = "Error: Decryption failed. Wrong password or corrupted data.";
                }
            });

            // --- 4. PATTERN SCANNER ---
            const scanLinkBtn = document.getElementById('scan-link-btn');
            const scanFileBtn = document.getElementById('scan-file-btn');
            const linkInput = document.getElementById('link-input');
            const fileInput = document.getElementById('vt-file-input');
            const resultDiv = document.getElementById('link-result');
            const modeLink = document.getElementById('mode-link');
            const modeFile = document.getElementById('mode-file');

            modeLink.addEventListener('click', () => {
                modeLink.classList.add('bg-primary-600', 'text-white');
                modeLink.classList.remove('text-slate-600');
                modeFile.classList.remove('bg-primary-600', 'text-white');
                modeFile.classList.add('text-slate-600');
                document.getElementById('vt-url-section').classList.remove('hidden');
                document.getElementById('vt-file-section').classList.add('hidden');
                resultDiv.innerHTML = '';
            });

            modeFile.addEventListener('click', () => {
                modeFile.classList.add('bg-primary-600', 'text-white');
                modeFile.classList.remove('text-slate-600');
                modeLink.classList.remove('bg-primary-600', 'text-white');
                modeLink.classList.add('text-slate-600');
                document.getElementById('vt-file-section').classList.remove('hidden');
                document.getElementById('vt-url-section').classList.add('hidden');
                resultDiv.innerHTML = '';
            });

            fileInput.addEventListener('change', (e) => {
                if(e.target.files[0]) {
                    document.getElementById('vt-file-name').textContent = e.target.files[0].name;
                    scanFileBtn.disabled = false;
                }
            });

            const showRisk = (score, findings) => {
                const color = score >= 50 ? 'bg-red-50 text-red-700 border-red-200' : (score > 0 ? 'bg-amber-50 text-amber-700 border-amber-200' : 'bg-green-50 text-green-700 border-green-200');
                const title = score >= 50 ? 'High Risk Detected' : (score > 0 ? 'Suspicious' : 'Appears Safe');
                
                resultDiv.innerHTML = `
                    <div class="p-5 rounded-xl border ${color} mt-4">
                        <div class="flex justify-between items-center mb-2">
                            <h4 class="font-bold text-lg">${title}</h4>
                            <span class="text-xs font-bold bg-white/50 px-2 py-1 rounded">Risk Score: ${score}/100</span>
                        </div>
                        <ul class="list-disc list-inside text-sm space-y-1 opacity-90">
                            ${findings.length ? findings.map(f => `<li>${f}</li>`).join('') : '<li>No obvious threats patterns found.</li>'}
                        </ul>
                    </div>
                `;
            };

            scanLinkBtn.addEventListener('click', () => {
                const url = linkInput.value.trim();
                if(!url) return;
                resultDiv.innerHTML = `<div class="flex items-center gap-2 text-slate-500 justify-center py-4"><div class="animate-spin rounded-full h-5 w-5 border-2 border-primary-600 border-t-transparent"></div> Analyzing patterns...</div>`;
                
                setTimeout(() => {
                    let score = 0;
                    let findings = [];
                    if(!url.startsWith('https')) { score += 20; findings.push("Not using secure HTTPS protocol."); }
                    if(/^http:\/\/(\d{1,3}\.){3}\d{1,3}/.test(url)) { score += 50; findings.push("Raw IP address used instead of domain name."); }
                    if(['.xyz','.top','.zip','.tk','.ru'].some(x => url.includes(x))) { score += 30; findings.push("Suspicious Top Level Domain (TLD)."); }
                    if(url.includes('@')) { score += 40; findings.push("URL obfuscation detected (@ symbol)."); }
                    
                    showRisk(score, findings);
                }, 800);
            });

            scanFileBtn.addEventListener('click', () => {
                const file = fileInput.files[0];
                if(!file) return;
                resultDiv.innerHTML = `<div class="flex items-center gap-2 text-slate-500 justify-center py-4"><div class="animate-spin rounded-full h-5 w-5 border-2 border-primary-600 border-t-transparent"></div> Analyzing file header...</div>`;
                
                setTimeout(() => {
                    let score = 0;
                    let findings = [];
                    const ext = file.name.substring(file.name.lastIndexOf('.')).toLowerCase();
                    if(['.exe','.scr','.bat','.vbs'].includes(ext)) { score += 60; findings.push(`High risk executable extension (${ext}).`); }
                    if(file.name.split('.').length > 2) { score += 40; findings.push("Double extension detected (e.g. file.pdf.exe)."); }
                    
                    showRisk(score, findings);
                }, 800);
            });

            // --- 5. PRIVACY AUDIT (UPDATED with Fixes) ---
            const checkPrivacy = () => {
                let score = 100;
                let details = [];

                // 1. Check Cookies
                const cookiesOn = navigator.cookieEnabled;
                if(cookiesOn) score -= 20;
                details.push({ 
                    label: "Cookies Enabled", 
                    val: cookiesOn ? "Yes" : "No", 
                    bad: cookiesOn,
                    fix: "Go to Browser Settings > Privacy > Cookies and block 'Third-party cookies'."
                });

                // 2. Do Not Track
                const dnt = navigator.doNotTrack;
                const dntOn = dnt === "1" || dnt === "yes";
                if(!dntOn) score -= 20;
                details.push({ 
                    label: "Do Not Track", 
                    val: dntOn ? "Active" : "Disabled", 
                    bad: !dntOn,
                    fix: "Enable 'Send a Do Not Track request' in your browser settings."
                });

                // 3. User Agent (Too specific is bad)
                const ua = navigator.userAgent;
                details.push({ label: "User Agent", val: ua.substring(0, 30)+"...", bad: false }); 

                // 4. Screen Resolution
                const res = `${window.screen.width}x${window.screen.height}`;
                details.push({ label: "Screen Res", val: res, bad: false });

                // 5. Language
                details.push({ label: "Language", val: navigator.language, bad: false });

                // Update UI
                const scoreEl = document.getElementById('privacy-score');
                scoreEl.textContent = `${score}/100`;
                scoreEl.className = `text-4xl font-bold mb-2 ${score > 80 ? 'text-green-500' : 'text-amber-500'}`;

                document.getElementById('privacy-details').innerHTML = details.map(d => `
                    <div class="flex flex-col p-4 rounded-xl border ${d.bad ? 'bg-red-50 border-red-100 dark:bg-red-900/20 dark:border-red-800' : 'bg-white border-slate-100 dark:bg-slate-800 dark:border-slate-700'}">
                        <div class="text-xs font-bold uppercase tracking-wider opacity-60 mb-1">${d.label}</div>
                        <div class="font-mono text-sm truncate ${d.bad ? 'text-red-600 dark:text-red-400' : 'text-slate-700 dark:text-slate-300'}">${d.val}</div>
                        ${d.bad ? `<div class="mt-2 text-xs text-red-500 dark:text-red-300 font-medium bg-white/50 dark:bg-black/20 p-2 rounded"> Fix: ${d.fix}</div>` : ''}
                    </div>
                `).join('');
            };
            
            document.querySelector('[data-tab="privacy"]').addEventListener('click', checkPrivacy);

            // --- 6. AWARENESS GAME & ALERTS ---
            let score = 0;
            let questionCount = 0;
            let userMistakes = [];
            const MAX_QUESTIONS = 5;
            const allScenarios = [
                { t: "Phishing", q: "Email from 'Amaz0n-Support' says your order #1234 is locked. Click link to verify.", a: ["Click link", "Check sender email", "Reply with password"], correct: 1, exp: "Official emails come from amazon.com, not 'amaz0n'. Always verify the sender." },
                { t: "Smishing", q: "SMS: 'USPS: Package undelivered. Update address here: usps-tracking-info.com'", a: ["Ignore/Delete", "Click link", "Forward to friends"], correct: 0, exp: "USPS won't send random links. 'usps-tracking-info.com' is a fake domain." },
                { t: "Tech Support", q: "Loud popup: 'VIRUS DETECTED! Call Microsoft at 1-800-XXX-XXXX immediately'.", a: ["Call number", "Download tool", "Force close browser"], correct: 2, exp: "Microsoft never sends popups asking you to call. This is scareware." },
                { t: "CEO Fraud", q: "Email from your 'CEO' asking for urgent gift cards for a client meeting.", a: ["Buy cards", "Verify via Slack/Call", "Reply with code"], correct: 1, exp: "Urgent requests for money/gift cards are classic executive impersonation scams." },
                { t: "Password", q: "A website asks for your email password to 'link your contacts'.", a: ["Give password", "Use OAuth (Login with Google)", "Type fake password"], correct: 1, exp: "Never give your raw password to a third party. Use secure tokens like OAuth." },
                { t: "Public Wi-Fi", q: "You're at a cafe. Two networks appear: 'Starbucks_Free' and 'Starbucks_Guest_Free'.", a: ["Connect to strongest", "Ask staff which is real", "Use VPN on either"], correct: 2, exp: "Hackers create 'Evil Twin' hotspots. A VPN encrypts your data regardless." },
                { t: "USB Drop", q: "You find a USB drive labeled 'Payroll 2024' in the parking lot.", a: ["Plug it in", "Give to IT Security", "Throw in trash"], correct: 1, exp: "USBs can auto-execute malware. Never plug in found drives." },
                { t: "2FA", q: "You get a 2FA code you didn't request. A 'Support Agent' calls asking for it.", a: ["Give code", "Hang up", "Ask for their ID"], correct: 1, exp: "Support will NEVER ask for your OTP. This is an account takeover attempt." },
                { t: "Social Media", q: "Friend sends a FB message: 'Is this you in this video?? [link]'", a: ["Click link", "Message friend separately", "Ignore"], correct: 1, exp: "Your friend's account is likely hacked. The link is a phishing trap." },
                { t: "Updates", q: "Browser popup: 'Flash Player is outdated! Click to update'.", a: ["Click update", "Close popup", "Download form Adobe.com"], correct: 1, exp: "Fake update popups install malware. Browsers update automatically now." },
                { t: "QR Code", q: "A parking meter has a new QR sticker over the old payment slot.", a: ["Scan and pay", "Use official app/Cash", "Google the code"], correct: 1, exp: "Scammers stick malicious QR codes over legit ones ('Quishing')." },
                { t: "Job Offer", q: "Remote job offer: 'Pay check sent in advance. Buy equipment from our vendor'.", a: ["Deposit check", "Report as scam", "Buy equipment"], correct: 1, exp: "Fake check scam. The check will bounce after you send your own money." }
            ];

            const shuffle = (array) => {
                for (let i = array.length - 1; i > 0; i--) {
                    const j = Math.floor(Math.random() * (i + 1));
                    [array[i], array[j]] = [array[j], array[i]];
                }
                return array;
            };

            let activeQuestions = [];
            const startScreen = document.getElementById('game-start-screen');
            const qScreen = document.getElementById('game-question-screen');
            const rScreen = document.getElementById('game-results-screen');
            const scenarioTxt = document.getElementById('game-scenario');
            const optionsDiv = document.getElementById('game-options');
            const feedback = document.getElementById('game-feedback');
            const nextBtn = document.getElementById('game-next-btn');
            const qCountDisplay = document.getElementById('question-count');
            const scoreDisplay = document.getElementById('game-score');

            const startQuiz = () => {
                score = 0;
                questionCount = 0;
                userMistakes = [];
                activeQuestions = shuffle([...allScenarios]).slice(0, MAX_QUESTIONS);
                startScreen.classList.add('hidden');
                rScreen.classList.add('hidden');
                qScreen.classList.remove('hidden');
                loadQuestion();
            };

            const loadQuestion = () => {
                if (questionCount >= MAX_QUESTIONS) {
                    showResults();
                    return;
                }
                const q = activeQuestions[questionCount];
                scenarioTxt.textContent = q.q;
                qCountDisplay.textContent = questionCount + 1;
                scoreDisplay.textContent = `Score: ${score}`;
                optionsDiv.innerHTML = q.a.map((opt, i) => `<button class="w-full text-left p-4 rounded-xl border border-slate-200 dark:border-slate-600 hover:bg-primary-50 dark:hover:bg-slate-700 transition-colors" onclick="checkAns(${i}, ${q.correct}, '${q.exp.replace(/'/g, "\\'")}', '${q.q.replace(/'/g, "\\'")}', '${opt.replace(/'/g, "\\'")}', this)">${opt}</button>`).join('');
                feedback.innerHTML = '';
                nextBtn.classList.add('hidden');
            };

            window.checkAns = (idx, correct, exp, qText, userAns, btn) => {
                const opts = optionsDiv.children;
                for(let o of opts) o.disabled = true;
                if(idx === correct) {
                    btn.classList.add('bg-green-100', 'border-green-500', 'dark:bg-green-900/30');
                    score++;
                    feedback.innerHTML = `<div class="text-green-600 font-bold mb-1">Correct!</div><div class="text-sm text-slate-600 dark:text-slate-300">${exp}</div>`;
                } else {
                    btn.classList.add('bg-red-100', 'border-red-500', 'dark:bg-red-900/30');
                    feedback.innerHTML = `<div class="text-red-600 font-bold mb-1">Incorrect</div><div class="text-sm text-slate-600 dark:text-slate-300">${exp}</div>`;
                    userMistakes.push({ q: qText, a: userAns, why: exp });
                }
                scoreDisplay.textContent = `Score: ${score}`;
                questionCount++;
                nextBtn.classList.remove('hidden');
            };

            const showResults = () => {
                qScreen.classList.add('hidden');
                rScreen.classList.remove('hidden');
                const percentage = (score / MAX_QUESTIONS) * 100;
                let rating = "Security Rookie";
                let color = "text-red-500";
                if(percentage >= 80) { rating = "Cyber Guardian"; color = "text-green-500"; }
                else if(percentage >= 60) { rating = "Security Aware"; color = "text-amber-500"; }
                document.getElementById('final-score-display').innerHTML = `${score}/${MAX_QUESTIONS} <span class="text-lg text-slate-400">(${percentage}%)</span>`;
                document.getElementById('final-message').innerHTML = `<span class="${color} font-bold">${rating}</span>`;
                const mistakesDiv = document.getElementById('mistakes-analysis');
                const mistakesList = document.getElementById('mistakes-list');
                if(userMistakes.length > 0) {
                    mistakesDiv.classList.remove('hidden');
                    mistakesList.innerHTML = userMistakes.map(m => `<div class="bg-red-50 dark:bg-red-900/10 p-4 rounded-lg border border-red-100 dark:border-red-900/30 text-sm"><div class="font-semibold text-slate-700 dark:text-slate-200 mb-1">Q: ${m.q}</div><div class="text-red-600 mb-2">You chose: ${m.a}</div><div class="text-slate-600 dark:text-slate-400 italic"> ${m.why}</div></div>`).join('');
                } else {
                    mistakesDiv.classList.add('hidden');
                    document.getElementById('final-message').innerHTML += "<br>Perfect Score! You are a pro.";
                }
            };

            document.getElementById('start-game-btn').addEventListener('click', startQuiz);
            document.getElementById('game-next-btn').addEventListener('click', loadQuestion);
            document.getElementById('restart-game-btn').addEventListener('click', startQuiz);

            const precautions = [
                { t: "Use a Password Manager", d: "Stop memorizing passwords. Use Bitwarden or 1Password to generate unique keys." },
                { t: "Enable 2FA Everywhere", d: "Turn on Two-Factor Auth (TOTP apps like Google Auth, not SMS) for email and banking." },
                { t: "Update Everything", d: "Set your OS and browser to auto-update. Patches fix security holes hackers use." },
                { t: "Lock Your Credit", d: "Freeze your credit files at Equifax, Experian, and TransUnion to prevent identity theft." },
                { t: "Use a VPN on Public Wi-Fi", d: "Never trust coffee shop or airport Wi-Fi without encryption." }
            ];
            document.getElementById('precautions-list').innerHTML = precautions.map(p => `<div class="flex gap-4 p-4 bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 hover:shadow-md transition-shadow cursor-default group"><div class="mt-1 text-primary-500 group-hover:scale-110 transition-transform"><svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg></div><div><h4 class="font-semibold text-slate-800 dark:text-slate-100">${p.t}</h4><p class="text-sm text-slate-500 dark:text-slate-400 mt-1">${p.d}</p></div></div>`).join('');

            // Alert Logic
            const loadAlert = async () => {
                const titleEl = document.getElementById('scam-alert-title');
                const descEl = document.getElementById('scam-alert-description');
                
                // Show loading state explicitly
                titleEl.textContent = "Fetching Intel...";
                descEl.textContent = "Connecting to live threat feed...";

                // Static fallback array
                const staticAlerts = [
                    { t: "AI Voice Cloning", d: "Attackers are using AI to mimic relatives' voices for bail money scams. Verify by calling back." },
                    { t: "Fake Job Offers", d: "Beware of WhatsApp messages offering 'Part-time likes' jobs. These are pyramid schemes." },
                    { t: "QR Code Quishing", d: "Scammers are placing fake QR stickers on parking meters to steal card details." }
                ];

                try {
                    // Add timestamp to force unique results
                    const seed = Date.now(); 
                    const res = await fetch(`https://text.pollinations.ai/${encodeURIComponent('Generate one short, urgent cybersecurity alert title and one sentence description based on current trends. Format: Title|Description. Random Seed: ' + seed)}`);
                    
                    if (!res.ok) throw new Error("Network response was not ok");
                    
                    const text = await res.text();
                    if(text.includes('|')) {
                        const [t, d] = text.split('|');
                        titleEl.textContent = t.trim();
                        descEl.textContent = d.trim();
                    } else {
                        throw new Error("Invalid format");
                    }
                } catch(e) { 
                    console.log("Using offline alert fallback"); 
                    // Only use static fallback if AI fails
                    const randAlert = staticAlerts[Math.floor(Math.random() * staticAlerts.length)];
                    titleEl.textContent = randAlert.t;
                    descEl.textContent = randAlert.d;
                }
            };
            
            // Initial load
            loadAlert();
            document.getElementById('refresh-alert-btn').addEventListener('click', loadAlert);

            // Chat
            const chatWin = document.getElementById('chat-window');
            const chatInput = document.getElementById('chat-input');
            const msgs = document.getElementById('chat-messages');
            document.getElementById('toggle-chat').addEventListener('click', () => chatWin.classList.toggle('hidden'));
            document.getElementById('close-chat').addEventListener('click', () => chatWin.classList.add('hidden'));
            const sendMsg = async () => {
                const txt = chatInput.value.trim();
                if(!txt) return;
                const div = document.createElement('div');
                div.className = `p-3 rounded-2xl max-w-[85%] text-sm bg-primary-600 text-white self-end rounded-tr-none shadow-md flex flex-col items-end`;
                div.innerText = txt;
                msgs.appendChild(div);
                msgs.scrollTop = msgs.scrollHeight;
                chatInput.value = '';
                const loader = document.createElement('div');
                loader.className = 'p-3 bg-white dark:bg-slate-800 rounded-2xl rounded-tl-none self-start shadow-sm w-12 flex justify-center gap-1';
                loader.innerHTML = `<div class="w-1.5 h-1.5 bg-slate-400 rounded-full typing-dot"></div><div class="w-1.5 h-1.5 bg-slate-400 rounded-full typing-dot"></div>`;
                msgs.appendChild(loader);
                try {
                    const res = await fetch(`https://text.pollinations.ai/${encodeURIComponent('You are a security expert. Concise answer: '+txt)}`);
                    const ans = await res.text();
                    msgs.removeChild(loader);
                    const botDiv = document.createElement('div');
                    botDiv.className = `p-3 rounded-2xl max-w-[85%] text-sm bg-white dark:bg-slate-800 text-slate-700 dark:text-slate-300 self-start rounded-tl-none shadow-sm border border-slate-100 dark:border-slate-700 flex flex-col items-start`;
                    botDiv.innerHTML = marked.parse(ans);
                    msgs.appendChild(botDiv);
                    msgs.scrollTop = msgs.scrollHeight;
                } catch(e) { msgs.removeChild(loader); }
            };
            document.getElementById('send-chat').addEventListener('click', sendMsg);
            chatInput.addEventListener('keypress', (e) => e.key === 'Enter' && sendMsg());
        });
    </script>
</body>
</html>
