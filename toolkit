    <!-- Floating Chat Button -->
    <div class="fixed bottom-6 right-6 z-50">
        <div id="chat-window" class="hidden absolute bottom-16 right-0 w-80 md:w-96 h-[500px] glass-panel bg-white/95 dark:bg-slate-800/95 rounded-2xl shadow-2xl flex flex-col overflow-hidden border border-slate-200 dark:border-slate-700 origin-bottom-right animate-fade-scale">
            <div class="bg-primary-600 p-4 text-white flex justify-between items-center">
                <div class="flex items-center gap-2">
                    <span class="relative flex h-3 w-3">
                      <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
                      <span class="relative inline-flex rounded-full h-3 w-3 bg-green-500"></span>
                    </span>
                    <h3 class="font-bold text-sm">Security Assistant</h3>
                </div>
                <button id="close-chat" class="hover:bg-white/20 rounded-lg p-1"><svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg></button>
            </div>
            <div id="chat-messages" class="flex-1 p-4 overflow-y-auto space-y-3 text-sm bg-slate-50 dark:bg-slate-900/50">
                <div class="flex flex-col space-y-2">
                    <div class="bg-white dark:bg-slate-800 p-3 rounded-2xl rounded-tl-none shadow-sm border border-slate-100 dark:border-slate-700 max-w-[90%] text-slate-700 dark:text-slate-300">
                        Hello! I'm your AI security assistant. I can help check passwords, analyze links, or explain threats. How can I help?
                    </div>
                </div>
            </div>
            <div class="p-3 bg-white dark:bg-slate-800 border-t border-slate-200 dark:border-slate-700">
                <div class="flex gap-2">
                    <input type="text" id="chat-input" placeholder="Ask a question..." class="w-full px-4 py-2 bg-slate-100 dark:bg-slate-900 rounded-full text-sm focus:ring-2 focus:ring-primary-500 outline-none dark:text-white">
                    <button id="send-chat" class="p-2 bg-primary-600 text-white rounded-full hover:bg-primary-700 transition shadow-md">
                        <svg class="h-4 w-4 transform rotate-90" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" /></svg>
                    </button>
